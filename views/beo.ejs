    function showSchools(region) {
      const regionTitle = document.getElementById('region-title');
      const schoolList = document.getElementById('school-list');
      regionTitle.textContent = region + " Region Schools:";
      schoolList.innerHTML = "";

      schools[region].forEach((school, index) => {
        const div = document.createElement("div");
        div.className = "school";
        div.textContent = school.name;
        div.onclick = () => showDetails(school);
        schoolList.appendChild(div);
      });

      document.getElementById('container2').style.display = "none";
      document.getElementById('container1').style.display = "block";
    }

    function showDetails(school) {
