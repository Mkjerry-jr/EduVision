<script>
  function showPage(id) {
  const pages = document.querySelectorAll('.page');
  pages.forEach(page => page.classList.remove('active'));
  document.getElementById(id).classList.add('active');

  const members = Array.from({ length: 6 }, (_, i) => ({ name: `Student ${i + 1}`, assigned: false }));
  const leaders = Array.from({ length: 11 }, (_, i) => ({ name: `Teacher ${i + 1}`, team: [] }));
  let shuffledMembers = [...members]; // Used by assign() after shuffle()

  // Function to render members and leaders
  function render() {
    const membersList = document.getElementById('members');
    const leadersList = document.getElementById('leaders');
    membersList.innerHTML = '';
    leadersList.innerHTML = '';

    // Render Members
    members.forEach(member => {
      const className = member.assigned ? 'assigned' : 'unassigned';
      membersList.innerHTML += `<li class="user ${className}">${member.name}</li>`;
    });

    // Render Leaders
    leaders.forEach(leader => {
      const isAvailable = leader.team.length === 0;
      const className = isAvailable ? 'unassigned' : 'assigned';
      const teamList = leader.team.map(m => m.name).join(', ') || 'Available';
      leadersList.innerHTML += `
        <li class="user ${className}">
          <strong>${leader.name}</strong><br>
          <small>${teamList}</small>
        </li>`;
    });
  }

  // Function to assign members to leaders
  function assign() {
    leaders.forEach(l => l.team = []);
    members.forEach(m => m.assigned = false);

    let index = 0;
    for (let leader of leaders) {
      leader.team = shuffledMembers.slice(index, index + 4);
      leader.team.forEach(m => m.assigned = true);
      index += 4;
      if (index >= shuffledMembers.length) break;
    }

    render();
  }

  // Function to shuffle members before assignment
  function shuffle() {
    shuffledMembers = [...members];
    for (let i = shuffledMembers.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [shuffledMembers[i], shuffledMembers[j]] = [shuffledMembers[j], shuffledMembers[i]];
    }

    // Reset previous assignments
    leaders.forEach(l => l.team = []);
    members.forEach(m => m.assigned = false);

    render(); // Update UI with unassigned (red) states
  }

  render(); // Initial render

}
</script>
