    <script>

        function submitStudent() {
            const username = document.getElementById('login-usr').value;
            const password = document.getElementById('login-pswd').value;

            if (username && password) {
                document.getElementById('studentLogin').submit();
            } else {
                alert('Please fill in all fields.');
            }
        }


        function showSection(sectionId) {
            document.querySelectorAll('.wrapper').forEach(el => el.classList.remove('active'));
            document.getElementById(sectionId).classList.add('active');
        }

        function openPage(role) {
            if (role === 'admin') {
                showSection('adminOptions');
            } else {
                showSection('loginForm');
            }
        }

        function goBack() {
            if (document.getElementById('adminOptions').classList.contains('active')) {
                showSection('roleSelection');
            } else {
                showSection('adminOptions');
            }
        }

        function redirectTo(role) {
    if (role === '/student') {
        showSection('studentLoginForm');
    } else if (role === '/teacher') {
        showSection('teacherLoginForm');
    } else if (role === '/head') {
        showSection('headLoginForm');
    } else if (role === '/cluster') {
        showSection('clusterLoginForm');
    } else if (role === '/beo') {
        showSection('beoLoginForm');
    } else {
        window.location.href = role;
    }
}

    </script>
