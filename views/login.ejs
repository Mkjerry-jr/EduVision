    <style>

         .header {
        position: absolute;
        top: 10px;
        right: 10px;
        width: auto;
        height: auto;
        z-index: 10; /* Ensures logo stays on top */
    }

    .top-right-logo {
        margin-right: 100px;
        width: 200px; /* Slightly larger size */
        height: auto;
    }
        /* General Styling */
        body {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: url('/images/login-cover.jpg') no-repeat center center fixed;
            background-size: cover;
            background-color: rgba(0, 0, 0, 0.2);
            font-family: Arial, sans-serif;
            padding-right: 50px;
        }
        body::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
        }

        /* Wrapper Box */
        .wrapper {
            width: 300px;
            padding: 20px;
            background: rgba(255, 255, 255, 0.2);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
            border-radius: 15px;
            backdrop-filter: blur(10px);
            text-align: center;
            display: none;
            animation: fadeIn 0.5s ease-in-out;
            position: relative;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .active {
            display: block;
        }

        .back-btn {
            position: absolute;
            top: 15px;
            left: 15px;
            background: none;
            border: none;
            font-size: 24px;
            color: black;
            cursor: pointer;
            transition: 0.3s;
        }

        .back-btn:hover {
            transform: scale(1.1);
        }

        h1, p, label, a {
            color: black;
        }
        h2 {
            color: white;
        }

        .btn {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            font-size: 16px;
            font-weight: bold;
            color: black;
            border: none;
            cursor: pointer;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.5);
            backdrop-filter: blur(10px);
            transition: 0.3s;
            text-transform: uppercase;
        }

        .btn:hover {
            background: rgba(255, 255, 255, 0.7);
            transform: scale(1.05);
        }

        .btn:active {
            transform: scale(0.95);
        }

        .inputbox {
            position: relative;
            margin: 15px 0;
        }

        .inputbox input {
            width: 100%;
            padding: 10px;
            border: none;
            outline: none;
            background: rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
            border-radius: 5px;
            color: black;
            font-size: 14px;
        }

        .inputbox i {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: black;
        }

        .Remember, .register {
            margin-top: 10px;
            font-size: 14px;
        }

        .Remember a, .register a {
            color: black;
            text-decoration: none;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="header">
        <img src="/images/Eduvision_logo.png" alt="Logo" class="top-right-logo">
    </div>
    <!-- Role Selection -->
    <div class="wrapper active" id="roleSelection">
        <h2>Select Role</h2>
        <button type="button" class="btn" onclick="openPage('admin')">Admin</button>
        <button type="button" class="btn" onclick="redirectTo('/teacher')">Teacher</button>
        <button type="button" class="btn" onclick="redirectTo('/student')">Student</button>
    </div>

    <!-- Admin Options -->
    <div class="wrapper" id="adminOptions">
        <button class="back-btn" onclick="goBack()"><i class='bx bx-arrow-back'></i></button>
        <h2>Admin Options</h2>
        <button type="button" class="btn" onclick="redirectTo('/beo')">BEO</button>
        <button type="button" class="btn" onclick="redirectTo('/cluster')">Cluster Head</button>
        <button type="button" class="btn" onclick="redirectTo('/head')">Head</button>
    </div>

    <!-- Login Form -->
<!-- Student Login Form -->
<div class="wrapper" id="studentLoginForm">
