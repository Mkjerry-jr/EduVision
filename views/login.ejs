    <form action="/student" id="studentLogin" method="POST">
        <h1>Student Login</h1>
        <div class="inputbox">
            <input type="text" name="username"  id="login-usr" placeholder="Username" required>
            <i class='bx bx-user'></i>
        </div>
        <div class="inputbox">
            <input type="password" name="password" id="login-pswd" placeholder="Password" required>
            <i class='bx bx-lock-alt'></i>
        </div>
        <div class="Remember">
            <label><input type="checkbox"> Remember Me</label>
            <a href="#">Forget Password?</a>
        </div>
        <div>
            <button type="submit" onclick="submitStudent()" class="btn">Login</button>
        </div>
        <div class="register">
            <p>Don't have an account? <a href="#">Register</a></p>
        </div>
    </form>    
</div>

